# Production Environment Variables
# IMPORTANT: Generate secure values for production!

# Database
POSTGRES_USER=bonding_user
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE
POSTGRES_DB=bonding_agent

# API Key (generate a secure random key)
BONDING_API_KEY=CHANGE_ME_SECURE_API_KEY_HERE

# External APIs (public endpoints)
KALSHI_API_BASE=https://api.kalshi.com/v1
POLYMARKET_GAMMA_API_BASE=https://gamma-api.polymarket.com
POLYMARKET_CLOB_API_BASE=https://clob.polymarket.com

# Polling Intervals (seconds)
KALSHI_POLL_INTERVAL_SEC=60
POLYMARKET_POLL_INTERVAL_SEC=60

# Feature Weights (must sum to 1.0)
WEIGHT_TEXT=0.35
WEIGHT_ENTITY=0.25
WEIGHT_TIME=0.15
WEIGHT_OUTCOME=0.20
WEIGHT_RESOLUTION=0.05

# Tier Thresholds
TIER1_P_MATCH_THRESHOLD=0.98
TIER2_P_MATCH_THRESHOLD=0.90

# Performance
CANDIDATE_LIMIT=20
SIMILARITY_CALC_TIMEOUT_MS=50
BOND_REGISTRY_CACHE_TTL_SEC=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=production
